<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loadImageManually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load manually"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <Button
        android:id="@+id/download_btn_internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save internal"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/loadImageManually"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <Button
        android:id="@+id/download_btn_external"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save external"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/loadImageManually"
        app:layout_constraintTop_toBottomOf="@+id/download_btn_internal" />

    <Button
        android:id="@+id/download_btn_pic_dir_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save pic dir public "
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/loadImageManually"
        app:layout_constraintTop_toBottomOf="@+id/download_btn_external" />




    <Button
        android:id="@+id/loadImageGlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load glide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadImageManually" />

    <Button
        android:id="@+id/loadImageInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Internal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadImageGlide" />

    <Button
        android:id="@+id/loadImageExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load External"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadImageInternal" />

    <Button
        android:id="@+id/loadImagePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load From Pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loadImageExternal" />

</androidx.constraintlayout.widget.ConstraintLayout>